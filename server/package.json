{
  "name": "campus-carpooling-server",
  "license": "UNLICENSED",
  "description": "the campus carpooling server",
  "scripts": {
    "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/main.ts",
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/main.ts",
    "build": "rimraf dist && tsc",
    "reset-db": "ts-node src/seed.ts",
    "refresh-schema": "cd database && npx prisma introspect && npx prisma generate",
    "studio": "cd database && npx prisma studio --experimental",
    "lint": "eslint './**/*.{ts,tsx}' --fix",
    "format": "prettier --config ./.prettierrc --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@prisma/cli": "^2.2.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "dotenv-cli": "^3.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "moment": "^2.27.0",
    "nodemailer": "^6.4.10",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@prisma/client": "^2.2.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1"
  }
}
